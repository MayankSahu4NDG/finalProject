@model List<SampleQuestionPaper.Models.Question_Table1>

@{
    ViewBag.Title = "displayAllQuestion";
}

<div class="heading">
    <h3 style="text-align:center;color:lightseagreen; font-weight:700">All Questions in the Bank</h3>
</div>

<div class="container">
    @foreach (var ques in Model)
    {
        <div class="row">
            <hr />
            <p>
                <h4>@ques.QuestionId. @ques.Question ?</h4>
                <h5>a). @ques.Option1  </h5>
                <h5>b). @ques.Option2 </h5>
                <h5>c). @ques.Option3 </h5>
                <h5>d). @ques.Option4</h5>
            </p>
            @Html.ActionLink("Pick Question", "Add", new { id = ques.QuestionId }, new { @class = "btn btn-success" })
            @Html.ActionLink("Modify Question", "Edit", new { id = ques.QuestionId }, new { @class = "btn btn-warning mx-4" })
            @Html.ActionLink("Delete this Question", "Delete", new { id = ques.QuestionId }, new { @class = "btn btn-danger" })
            <br />
        </div>
    }
</div>

<style>
    a{
        width: auto !important;
        float:left;
    }
</style>