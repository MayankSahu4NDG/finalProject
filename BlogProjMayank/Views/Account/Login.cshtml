@model MiniProjectApp.DataModels.LoginView

@{
    ViewBag.Title = "Login";
}
<div class="login">
    <h2 style="text-align:center;color:cadetblue;font-size:50px">LogIn Page</h2>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-15">
            @using (Html.BeginForm())
            {
                <div style="color:red">
                    @Html.ValidationSummary()
                </div>
                <label class="lb">Enter the UserName</label><br>
                @Html.EditorFor(m => m.UserName)<br>
                <p style="color:red">
                    @Html.ValidationMessageFor(m => m.UserName)
                </p>
                <label>Enter Password</label><br>
                @Html.EditorFor(m => m.password)<br />
                <p style="color:red">
                    @Html.ValidationMessageFor(m => m.password)
                </p>
                <button class="btn btn-success ms-5">
                    Login
                </button>
            }
        </div>
    </div>
</div>
<style>
    .row{
        padding:20px;
        padding-left:80px;
    }
    input {
        min-width: 200px;
    }
</style>